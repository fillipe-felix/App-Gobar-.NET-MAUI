<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="Gobar.Views.ForgotPassword"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <StackLayout Margin="20,125,20,0">
        <VerticalStackLayout>
            <Label Style="{StaticResource Display2}" Text="Forgot password?" />
            <Label Style="{StaticResource Body2}" Text="Please enter your email for the password reset process" />
        </VerticalStackLayout>


        <VerticalStackLayout Margin="0,32,0,32">
            <Label Style="{StaticResource SubHeadline3}" Text="Email" />
            <Border Margin="0" Style="{StaticResource FormBorder}">
                <HorizontalStackLayout>
                    <Image HorizontalOptions="Start" Source="mail.png" />
                    <Entry HorizontalOptions="FillAndExpand" Placeholder="e-mail@teste.com" />
                </HorizontalStackLayout>
            </Border>

        </VerticalStackLayout>

        <Button HorizontalOptions="FillAndExpand" Text="Send" />
    </StackLayout>
</ContentPage>