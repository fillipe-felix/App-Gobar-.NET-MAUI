<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="Gobar.Views.OnboardingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid
        ColumnDefinitions="*"
        Margin="0"
        Padding="0"
        RowDefinitions="*, 375">
        <Image Grid.Row="0" Source="picture_on_1.png" />
        <Border
            BackgroundColor="#F99417"
            Grid.Row="1"
            StrokeShape="RoundRectangle 40,40,0,0">
            <VerticalStackLayout VerticalOptions="Center">
                <Label Text="Welcome Gobars" />
                <Label Text="Find the best grooming experience in your city&#10; with just one tap! Don't miss out on the haircut&#10; or treatment of your dreams. Let's start now!" />
            </VerticalStackLayout>
        </Border>
    </Grid>

</ContentPage>